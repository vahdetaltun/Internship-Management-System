@model IEnumerable<Stajtakip.Models.EntityFramework.GradeCategory>
@using GridMvc.Html
@{

    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
<script src="~/Scripts/loadingList-min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/text.config.min.css" rel="stylesheet" />

<div style="overflow-x:auto; width:100%; margin-left:6%; margin-right:6%;">
    <div class="card card-user">
        <div class="boxshadow-title">
            <h5 class="card-title text-color-btn-vfi-default">Grade Category List</h5>
        </div>
        <div class="card-body" style="overflow:auto;">
            @Html.Grid(Model).Columns(Columns =>
              {
                 Columns.Add(x => x.GradeName).Titled("Grade Type").Sortable(true).Filterable(true);
                 Columns.Add(x => x.Percent).Titled("Percentage").Sortable(true).Filterable(true);
                       Columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(20)
        .RenderValueAs(x => Html.ActionLink("Grade", "GradeStudent", new { GradeCategoryID = x.GradeCategoryID }, new { @style = "text-decoration:none;font-size:10pt;font-weight:bold;" }));

        }).WithPaging(12).Sortable(true)
        </div>
    </div>
</div>
