@model IEnumerable<Stajtakip.Models.EntityFramework.GradeCategory>
@using GridMvc.Html

@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}
<script>
    $function(){
        $(".linkdisabled").click(function () {
            return false;
        }
}
</script>
<script src="~/Scripts/loadingList-min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/text.config.min.css" rel="stylesheet" />

<div style="width:100%; margin-left:6%; margin-right:6%;">

    @if (ViewBag.ShowList == 1)
    {
        <div class="card card-user">
            <div class="boxshadow-title">
                <h5 class="card-title text-color-btn-vfi-default">Grade Types</h5>
            </div>
            <div class="card-body" style="overflow-x:auto;">
                @Html.Grid(Model).Columns(Columns =>
           {

               Columns.Add(x => x.GradeName).Titled("Grade Type").Sortable(true).Filterable(true);
               Columns.Add(x => x.Percent).Titled("Percentage");

               Columns.Add()
               .Encoded(false)
               .Sanitized(false)
               .SetWidth(20)
               .RenderValueAs(x => Html.ActionLink("Upload", "UploadFiles", new { id = x.GradeCategoryID }, new { @style = "text-decoration:none;font-size:10pt;font-weight:bold;" }));



           }).WithPaging(12).Sortable(true)
            </div>
        </div>
    }


    @if (ViewBag.ShowList == 2)
    {
        <div style="width:100%;">
            <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                    ×
                </button>
                <span class="glyphicon glyphicon-info-sign"></span> <strong>Error Message!</strong>
                <hr class="message-inner-separator">
                <p>
                    You did not apply internship informations yet !
                </p>
            </div>
        </div>
    }
    else if (ViewBag.ShowList == 3)
    {
        <div style="width:100%; margin:0px; padding:0px;">
            <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                    ×
                </button>
                <span class="glyphicon glyphicon-info-sign"></span> <strong>Error Message!</strong>
                <hr class="message-inner-separator">
                <p>
                    Your application is not accepted yet !
                </p>
            </div>
        </div>
    }
</div>
