@model IEnumerable<Stajtakip.Models.EntityFramework.TeacherUserInfo>
@using GridMvc.Html
@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}
<script src="~/Scripts/loadingList-min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/text.config.min.css" rel="stylesheet" />

@*<div style="overflow-x:scroll;">*@
    <div class="card card-user"  style="width:100%; margin-left:6%; margin-right:6%;">
        <div class="boxshadow-title">
            <h5 class="card-title text-color-btn-vfi-default">Contact Teachers</h5>
        </div>
        <div class="card-body">
            <div >
                <div class="form-group" style="overflow-x:auto; width:100%;">
                    @Html.Grid(Model).Columns(Columns =>
               {
                   Columns.Add(c => c.TeacherName).Titled("Teacher Name").Filterable(true);
                   Columns.Add(c => c.TeacherSurname).Titled("Teacher Surname").Filterable(true);
                   Columns.Add(c => c.TeacherEmail).Titled("Teacher Email").Filterable(true);

                   Columns.Add(c => c.TeacherRoom).Titled("Teacher Room").Filterable(true);
                   Columns.Add()
                   .Encoded(false)
                   .Sanitized(false)
                   .SetWidth(40)
                   .RenderValueAs(o => Html.ActionLink("Edit", "EditTeacher", new { id = o.TeacherID }, new { @class = "linkdisabled" }));
               }).WithPaging(8).Sortable(true)
                </div>
            </div>
        </div>
    </div>
@*</div>*@