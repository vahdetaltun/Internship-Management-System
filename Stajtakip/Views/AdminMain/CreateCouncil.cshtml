@model Stajtakip.Models.EntityFramework.Council
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/loadingList-min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/text.config.min.css" rel="stylesheet" />

<div style="width:100%; margin-left:6%; margin-right:6%;">
    <div class="card card-user">
        <div class="boxshadow-title">
            <h5 class="card-title text-color-btn-vfi-default">Create Council</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <div class="form-group">
                        <br />
                        @Html.Label("Council Name", new { @class = "control-label" })
                        <div style="text-align:center;">
                            @Html.EditorFor(model => model.CouncilName, new { htmlAttributes = new { @class = "form-control", placeholder = "Council Name" } })
                            @Html.ValidationMessageFor(model => model.CouncilName, "", new { @class = "text-danger" })
                            <br />
                            <div style="text-align:center;">
                                @*<input type="submit" value="Create" class="btn btn-primary btn-round" />*@
                                <button type="submit" class="btn btn-primary btn-success" style="width:10em;">Create</button>
                                @Html.ActionLink("Back", "AdminMainPage", null, new { @class = "btn btn-primary btn-large " })
                            </div>

                        </div>

                    </div>
                </div>
            }
            @if (ViewBag.Control == true)
            {
                <div class="alert alert-success" style="width:auto;">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                        ×
                    </button>
                    <span class="glyphicon glyphicon-ok"></span> <strong>Success Message!</strong>
                    <hr class="message-inner-separator">
                    <p>
                        @ViewBag.success
                    </p>
                </div>

            }
            else if (ViewBag.Control == false)
            {
                <div class="alert alert-danger">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                        ×
                    </button>
                    <span class="glyphicon glyphicon-record"></span> <strong>Error Message!</strong>
                    <hr class="message-inner-separator">
                    <p>
                        @ViewBag.fail
                    </p>
                </div>
            }
        </div>
    </div>
</div>

